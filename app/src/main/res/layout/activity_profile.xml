<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_height="match_parent">


    <ScrollView
            android:layout_width="395dp"
            android:layout_height="715dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/scrollView2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linearLayout"/>
    </ScrollView>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginTop="112dp"
            android:background="@drawable/img"
            app:layout_constraintTop_toTopOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="155dp" android:layout_marginStart="155dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="180dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:contentDescription="user avatar"/>
    <TextView
            android:text="Няша Няшная"
            android:layout_width="394dp"
            android:layout_height="32dp"
            android:id="@+id/nameText"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:gravity="center"/>
    <TextView
            android:text="newNickName228"
            android:layout_width="390dp"
            android:layout_height="28dp"
            android:id="@+id/loginText"
            app:layout_constraintTop_toBottomOf="@+id/nameText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:gravity="center"
    />
    <TextView
            android:text="карма"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/karmaTitile" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/karmaText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"
            android:layout_marginStart="152dp"/>
    <TextView
            android:text="123456"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/karmaText" android:gravity="center"
            android:textStyle="bold" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText" android:layout_marginStart="152dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="152dp"/>
    <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/loginText"
            app:layout_constraintEnd_toStartOf="@+id/karmaText" android:layout_marginTop="20dp"/>
    <TextView
            android:text="81"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/findedText" app:layout_constraintEnd_toStartOf="@+id/karmaText"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText" android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="найдено"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/findedTitle" app:layout_constraintEnd_toStartOf="@+id/karmaTitile"
            app:layout_constraintTop_toBottomOf="@+id/findedText" android:gravity="center"/>
    <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/loginText"
            app:layout_constraintStart_toStartOf="@+id/karmaText" android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>
    <TextView
            android:text="69"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/cleanedText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText" app:layout_constraintStart_toEndOf="@+id/karmaText"
            android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="убрано"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/cleanedTitile"
            app:layout_constraintTop_toBottomOf="@+id/cleanedText"
            app:layout_constraintStart_toEndOf="@+id/karmaTitile"
            android:gravity="center"/>
    <TextView
            android:text="Активные"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activeTitle" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/findedTitle"/>
    <android.support.v7.widget.CardView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activeTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/activeCards">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
        >
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/person_photo"
                    android:background="@drawable/img"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
            />
            <TextView
                    android:text="Мусор на улице"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name"
                    android:layout_toRightOf="@+id/person_photo"
                    android:layout_alignParentTop="true"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="19.05.2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_age"
                    android:layout_toRightOf="@+id/person_photo"
                    android:layout_below="@+id/person_name"
                    android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>